@model InventoryApp.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Inventory Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: #f8f9fa;
        }
        .container-delete {
            max-width: 600px;
            margin: 60px auto;
            background: white;
            padding: 30px 40px;
            border-radius: 10px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        }
        h2 {
            font-weight: 700;
            margin-bottom: 20px;
            color: #dc3545; /* Bootstrap danger color for Delete */
            text-align: center;
        }
        h3 {
            text-align: center;
            margin-bottom: 30px;
            color: #6c757d;
        }
        dt {
            font-weight: 600;
            color: #495057;
        }
        dd {
            margin-left: 0;
            color: #343a40;
        }
        .btn-danger {
            width: 100%;
            padding: 12px;
            font-size: 1.1rem;
            font-weight: 600;
            border-radius: 6px;
        }
        .btn-back {
            margin-top: 15px;
            display: inline-block;
            font-weight: 600;
            color: #6c757d;
            text-decoration: none;
            transition: color 0.3s ease;
        }
        .btn-back:hover {
            color: #343a40;
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container-delete shadow-sm">
        <h2>@ViewData["Title"]</h2>
        <h3>Are you sure you want to delete this?</h3>

        <div>
            <h4 class="mb-3">Product Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Quantity)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Quantity)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Price)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Price)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Description)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>

            <a asp-action="Index" class="btn-back d-block text-center mt-3">‚Üê Back to List</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
