@model InventoryApp.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login - Inventory App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
        }

        .login-box {
            background: #ffffffcc;
            padding: 40px 30px;
            border-radius: 20px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
            width: 100%;
            max-width: 400px;
            backdrop-filter: blur(8px);
            transition: transform 0.3s ease;
            box-sizing: border-box;
        }

        .login-box:hover {
            transform: scale(1.03);
        }

        .login-heading {
            margin-bottom: 30px;
            font-weight: 700;
            color: #4a3aff;
            text-align: center;
            letter-spacing: 1.2px;
            text-transform: uppercase;
            font-size: 1.8rem;
        }

        label {
            font-weight: 600;
            color: #4a3aff;
        }

        .form-control {
            border-radius: 10px;
            border: 1.5px solid #ddd;
            padding: 10px 15px;
            font-size: 1rem;
            transition: border-color 0.3s ease;
        }

        .form-control:focus {
            border-color: #4a3aff;
            box-shadow: 0 0 8px rgba(74, 58, 255, 0.4);
            outline: none;
        }

        .btn-primary {
            background: #4a3aff;
            border: none;
            border-radius: 12px;
            padding: 12px;
            font-weight: 700;
            font-size: 1.1rem;
            letter-spacing: 1px;
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #3629b7;
        }

        .alert-danger {
            font-weight: 600;
            font-size: 0.95rem;
            margin-bottom: 20px;
            border-radius: 10px;
            padding: 10px 15px;
        }
    </style>
</head>
<body>
    <div class="login-box">
        <h2 class="login-heading">Login</h2>

        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
        {
            <div class="form-group mb-4">
                @Html.LabelFor(m => m.Username)
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Enter username" })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-4">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-danger">@ViewBag.Message</div>
            }

            <button type="submit" class="btn btn-primary w-100">Login</button>
        }
    </div>
</body>
</html>
