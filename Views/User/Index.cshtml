@model IEnumerable<InventoryApp.Models.Product>

@{
    ViewData["Title"] = "Product List";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #667eea, #764ba2);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #2c3e50;
        }

        nav.navbar {
            box-shadow: 0 3px 10px rgba(0,0,0,0.2);
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.6rem;
            letter-spacing: 1px;
            color: #fff !important;
        }

        .nav-link {
            font-weight: 500;
            color: #e1e1e1 !important;
            transition: color 0.3s ease;
        }

        .nav-link:hover, .nav-link.active {
            color: #fff !important;
            text-decoration: underline;
        }

        .btn-info {
            background-color: #30cfd0;
            border-color: #30cfd0;
            font-weight: 600;
            transition: background-color 0.3s ease;
        }

        .btn-info:hover {
            background-color: #2bb8b9;
            border-color: #2bb8b9;
        }

        main.container {
            padding-top: 100px;
            max-width: 900px;
        }

        h2 {
            color: #fff;
            text-align: center;
            font-weight: 700;
            margin-bottom: 2rem;
            text-shadow: 1px 1px 3px rgba(0,0,0,0.3);
        }

        .btn-primary {
            background: #6e8efb;
            border: none;
            padding: 0.6rem 1.5rem;
            font-weight: 600;
            border-radius: 0.5rem;
            transition: background-color 0.3s ease;
            box-shadow: 0 5px 15px rgba(110,142,251,0.5);
        }

        .btn-primary:hover {
            background-color: #556cd6;
            box-shadow: 0 7px 20px rgba(85,108,214,0.7);
        }

        table {
            background: #fff;
            border-radius: 0.8rem;
            overflow: hidden;
            box-shadow: 0 15px 30px rgba(0,0,0,0.1);
        }

        thead.table-dark {
            background: linear-gradient(45deg, #6e8efb, #a777e3);
            color: #fff;
            font-weight: 600;
        }

        tbody tr:hover {
            background-color: #f0f4ff;
        }

        .btn-warning {
            background-color: #f6c23e;
            border-color: #f6c23e;
            color: #fff;
            font-weight: 600;
            border-radius: 0.4rem;
            transition: background-color 0.3s ease;
        }

        .btn-warning:hover {
            background-color: #d4a01b;
            border-color: #d4a01b;
        }

        .btn-danger {
            background-color: #e74c3c;
            border-color: #e74c3c;
            color: #fff;
            font-weight: 600;
            border-radius: 0.4rem;
            transition: background-color 0.3s ease;
        }

        .btn-danger:hover {
            background-color: #c0392b;
            border-color: #c0392b;
        }

        .alert-info {
            background-color: #d0ebff;
            color: #3178c6;
            border-radius: 0.5rem;
            padding: 1rem;
            font-weight: 600;
            text-align: center;
            box-shadow: 0 3px 8px rgba(49,120,198,0.4);
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">InventoryApp</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link active" href="/Home">Home</a></li>
                    <li class="nav-item"><a asp-controller="User" asp-action="About" class="nav-link">About</a></li>
                    <li class="nav-item"><a asp-controller="Progress" asp-action="Index" class="nav-link">Progress</a></li>
                </ul>
                <a asp-controller="Feedback" asp-action="Create" class="btn btn-info ms-2">Contact</a>
            </div>
        </div>
    </nav>

    <main class="container">
        <h2>@ViewData["Title"]</h2>

        <p class="text-end">
            <a asp-action="Create" class="btn btn-primary">Add New Product</a>
        </p>

        @if (Model != null && Model.Any())
        {
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.First().Name)</th>
                        <th>@Html.DisplayNameFor(m => m.First().Quantity)</th>
                        <th>@Html.DisplayNameFor(m => m.First().Price)</th>
                        <th>@Html.DisplayNameFor(m => m.First().Description)</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                            <td>@String.Format("{0:C}", item.Price)</td>
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger ms-1">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info mt-4">No products available.</div>
        }
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
